<?xml version="1.0"?>

<!-- Game settings -->

<settings>
  <game name="Wave Shooter" />
  <renderer width="1200" height="676"/>
   
  <font file="Media\Fonts\AverageSans_24.spritefont"/>

  <!-- sprites -->
   
  <sprites path="Media\Images">
    <sprite name="BlueTile" file="BlueTile" ext ="png" frames="5"/>
    <sprite name="BrownTile" file="BrownTile" ext ="png" frames="5"/>
    <sprite name="GrayTile" file="GrayTile" ext ="png" frames="5"/>
    <sprite name="RedTile" file="RedTile" ext ="png" frames="5"/>
	<sprite name="Tselect" file="Tselect.png"/>
